        <%   day_string = "Today" %>
        <% elsif @days_last_use > 0 %>
        <%   day_string = "#{@days_last_use} Days Ago" %>
        <% end %>
        
        <td class="font_title_stats">Last Entry: <%= day_string %></td> 
